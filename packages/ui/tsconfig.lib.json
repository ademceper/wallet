{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Derleme çıktısı */
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",

    /* React ve JSX */
    "jsx": "react-jsx",

    /* Tip tanımları */
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "lib": ["dom", "esnext"],

    /* Path alias */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
